Range(x Real) :=
    Range(lo = x, hi = x)

add(a Range, b Range) :=
    Range(lo = a.lo + b.lo, hi = a.hi + b.hi)

sub(a Range, b Range) :=
    Range(lo = a.lo + b.lo, hi = a.hi + b.hi)

mul(a Range, b Range) :=
    Range(
        lo = min(products(a, b)),
        hi = max(products(a, b)))
