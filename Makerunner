# at some point checkc should output to a file not stdout
DIAG=

CFLOPT=-O3 -Wall -Wno-unused-function -Wno-unused-label
CFLDBG=-O0 -g -Werror -DDEBUG -Icore
CFLFAST=-O3 -march=native -ffast-math -funroll-loops -DNOSTACKCHECK -DNONULLCHECK -DNOBOUNDSCHECK

%.run: %.jet *.[ch]
	make -C $(JETHOME) -j jetc && $(JETHOME)/jetc $< $(DIAG) > $@.c && cc $(CFLOPT) $@.c -o $@
#	rm $@.c

%-d.run: %.jet *.[ch]
	make -C $(JETHOME) -j jetc && $(JETHOME)/jetc $< $(DIAG) > $@.c && cc $(CFLDBG) $@.c -o $@
#	rm $@.c

%-f.run: %.jet *.[ch]
	make -C $(JETHOME) -j jetc && $(JETHOME)/jetc $< $(DIAG) > $@.c && cc $(CFLFAST) $@.c -o $@
#	rm $@.c
