    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current file",
            "program": "${workspaceRoot}/jetc-dbg",
            "args": [
                "${fileDirname}/${fileBasename}",
                "l"
            ],
            "cwd": "${fileDirname}",
            "MIMode": "lldb",
            "request": "launch",
            "type": "cppdbg",
            "preLaunchTask": "Run make jetc-dbg"
        },
        {
            "name": "Debug jetc-dbg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/jetc-dbg",
            "args": [
                "tests/genc.jet",
                "l"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Run make jetc-dbg"
        }
    ]
}